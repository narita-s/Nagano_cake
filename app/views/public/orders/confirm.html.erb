<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h3 class="col-md-6">注文情報確認</h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-7'>
      <table class='table table-bordered border-dark'>
        <tr class="table-secondary">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, :size => '100x50' %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.with_tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.subtotal.to_s(:delimited) %>
            </td>
          </tr>
          <% total += cart_item.subtotal %>
        <% end %>
      </table>
    </div>
    <div class='col-md-4'>
      <table class="table table-bordered border-dark">
        <% @order.shipping_cost = 800 %>
        <tr>
          <th class="table-secondary">送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= total.to_i.to_s(:delimited) %></td>
        </tr>
        <% @order.total_price = @order.shipping_cost + total.to_i %>
        <tr>
          <th class="table-secondary">請求金額</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-7'>
      <h5>支払方法</h5>
      <%= @order.payment_method_i18n %>
    </div>
    <div class='col-md-7'>
      <h5>お届け先</h5>
        〒<%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
    </div>
  </div>
  <div class="row justify-content-center py-5">
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :payment_method %>
      	<%= f.hidden_field :address %>
      	<%= f.hidden_field :postal_code %>
      	<%= f.hidden_field :name %>
      	<%= f.hidden_field :shipping_cost%>
      	<%= f.hidden_field :total_price, value: @total_price %>
      	<%= f.submit '注文を確定する', class: "btn btn-success" %>
      <% end %>
  </div>
</div>

