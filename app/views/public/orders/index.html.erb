<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h3 class="col-md-6">注文履歴一覧</h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table table-bordered border-dark'>
        <tr class="table-secondary">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.created_at.to_s(:date_jp) %></td>
                  <td>
                    <p class="mb-0" style="line-height:1.2em">
                      〒<%= order.postal_code.to_s.insert(3, "-") %></br>
                      <%= order.address.truncate(30) %></br>
                      <%= order.name %></p>
                  </td>
                  <td style="line-height:1.3em">
                    <% order.order_details.each do |order_detail| %>
                      <%= order_detail.item.name %></br>
                    <% end %>
                  </td>
                  <td><%= order.total_price %>円</td>
                  <td>ステータス</td>

                  <td><%= link_to "表示する", order_path(order), class: "btn btn-info" %></td>
                </tr>
              <% end %>
            </tbody>
      </table>
    </div>
  </div>
</div>