<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="col-5 my-4">マイページ</h3>
  </div>
  <div class="row align-items-center">
    <div class="col-md-2">
      <h5 class="font-weight-bold">登録情報</h5>
    </div>
      <%= link_to "編集する", edit_customers_path ,class:"btn btn-success col-md-2 ml-5"%>
  </div>
  <table class="table table-bordered col-md-8 mt-3">
    <tr>
      <td class="col-md-3 table-secondary">氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td class="col-md-3 table-secondary">カナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td class="col-md-3 table-secondary">郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td class="col-md-3 table-secondary">住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="col-md-3 table-secondary">電話番号</td>
       <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td class="col-md-3 table-secondary">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  <div class="row pt-3 align-items-center">
    <div class="col-md-2 ">
      <h5 class="font-weight-bold">配送先</h5>
    </div>
      <%= link_to "一覧を見る", addresses_path ,class:"btn btn-info col-md-2 ml-5"%>
  </div>
  <div class="row pt-3 align-items-center mt-2">
    <div class="col-md-2">
      <h5 class="font-weight-bold">注文履歴</h5>
    </div>
      <%= link_to "一覧を見る", orders_path ,class:"btn btn-info col-md-2 ml-5"%>
  </div>
</div>
