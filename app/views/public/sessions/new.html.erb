<h3>ログイン</h3>

  <%= form_with model: @customer, url: customer_session_path do |f| %>
  <h5>会員の方はこちらからログイン</h5>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード%>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>



  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<h5>会員登録がお済みでない方</h5>
<%= render "public/shared/links" %>から新規登録を行ってください
