  <% if @cart_item.errors.any? %>
  <%= @cart_item.errors.count %>件のエラーが発生しました
  <ul>
    <% @cart_item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h3 class="col-md-6">ショッピングカート</h3>
    </div>
    <div class="col-md-2 offset-md-1 mt-5">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row col-md-12 mt-2" >
    <% total = 0 %>
    <% if current_customer.cart_items.present? %>
      <div class="row col-md-12 mt-5" >
        <table class='table table-bordered'>
          <thead class="thead-light">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @cart_items.each do |cart_item| %>
            <tbody>
              <tr>
                <td class="text-left">
                  <%= image_tag cart_item.item.image, :size => '100x50' %>
                  <%= cart_item.item.name %>
                </td>
                <td class="text-left"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                <td class="text-center">
                  <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
                    <%= f.number_field :amount, min: 1, max:5, id: "amount_cart"%>
                    <%= f.submit "変更",class: "btn btn-success" %>
                  <% end %>
                </td>
                <td class="text-left">
                  <%= cart_item.subtotal.to_i.to_s(:delimited) %>
                </td>
                <td class="text-center">
                  <%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete, class: "btn btn-danger" %>
                </td>
              </tr>
            <% total += cart_item.subtotal %>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
    <div class='col-md-7 mt-3'>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-info"%>
    </div>
    <div class='col-md-4 mt-3'>
      <table class="table table-bordered cart_total_table">
        <tr>
          <th>合計金額</th>
          <td><%= total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
    <div class='col-md-12 mt-3 text-center'>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success"%>
    </div>
  </div>
</div>
