<div class="container">
  <div class="row text-center">
    <div class="col-md-4 mt-5">
      <h3 class="text-center">ショッピングカート</h3>
    </div>
  </div>
    <div class="row col-md-10 mt-5" >
<table>
   <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
   </tr>
     <% total = 0 %>

 <% if current_customer.cart_items.present? %>
    <% @cart_items.each do |cart_item| %>
     <tr>
       <td>
          <%= image_tag cart_item.item.image, :size => '100x50' %>

         <%= cart_item.item.name %>
       </td>
       <td><%= (cart_item.item.price*1.1).to_i %></td>
       <td>
         <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
           <%= f.number_field :quantity, min: 1, max:10, id: "amount_cart"%>
           <%= f.submit "変更",class: "btn btn-success" %>
         <% end %>
       </td>
       <td>
         <% subtotal = ((cart_item.item.price*cart_item.amount)*1.1).to_i %>
         <%= subtotal %>
       </td>
       <td>
         <%= link_to "商品をカートから削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
       </td>
     </tr>
       <% total += subtotal %>
     <% end %>
<% end %>
   <tr>
    <th>合計金額</th>
    <td><%= total %></td>
   </tr>
</table>
    </div>
</div>