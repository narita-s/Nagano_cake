<div class="container">
  <div class="row text-center">
    <div class="col-md-4 mt-5">
      <h3 class="text-center">配送先編集</h3>
    </div>
  </div>
  <div class="col-md-12 mt-5">
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <div class="row form-group pt-2">
          <div class="col-3 d-flex align-items-center">郵便番号(ハイフンなし)</div>
          <div class="col-md-4"><%= f.text_field :postal_code, class:"form-control" %></div>
        </div>
        <div class="row form-group pt-2">
         <div class="col-3 d-flex align-items-center"><%= f.label "住所" %></div>
          <div class="col-md-8"><%= f.text_field :address, class:"form-control" %></div>
        </div>
        <div class="row form-group pt-2">
          <div class="col-3 d-flex align-items-center">宛名</div>
          <div class="col-md-4"><%= f.text_field :name, class:"form-control" %></div>
          <%= f.submit '変更内容を保存' , class:"btn btn-success ml-5" %>
        </div>
      <% end %>
    </div>
</div>