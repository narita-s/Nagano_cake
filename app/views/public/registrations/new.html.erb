<body>
  <main>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4 mt-5">
          <h3 class="text-center">新規会員登録</h3>
        </div>
      </div>


        <div class="col-md-12">
          <%= form_with model: @customer, url: customer_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            <div class="row">
            <div class="field">
              <%= f.label :姓 %>
              <%= f.text_field :last_name %>
            </div>

            <div class="field">
              <%= f.label :名 %>
              <%= f.text_field :first_name %>
            </div>
            </div>

            <div class="field">
              <%= f.label :セイ %><br>
              <%= f.text_field :last_name_kana %>
            </div>

            <div class="field">
              <%= f.label :メイ %><br>
              <%= f.text_field :first_name_kana %>
            </div>

            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :郵便番号 %><br>
              <%= f.text_field :postal_code %>
            </div>

            <div class="field">
              <%= f.label :住所 %><br>
              <%= f.text_field :address %>
            </div>

            <div class="field">
              <%= f.label :電話番号 %><br>
              <%= f.text_field :telephone_number %>
            </div>

            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :パスワード（確認用） %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="actions">
              <%= f.submit "新規登録", class:"btn btn-success my-3 mr-3 mx-5" %>
            </div>
          <% end %>

          <div class="field">
            <h4>既に登録済みの方</h4>
          <span class="col-xs-offset-"><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>

        </div>
      </div>
    </div>
  </main>
</body>