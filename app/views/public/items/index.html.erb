<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="col-5 my-4">
      商品一覧
      <span class="small">(全<%= @total_items.count %>件)</span>
    </h3>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-10 d-flex flex-row flex-wrap mt-3" >
          <% @items.each do |item| %>
          <div class="mr-2">
            <%= link_to item_path(item) do %>
            <%= image_tag item.image, size: "200x130" %>
            <div class="mt-2 text-center">
              <span style="color: #808080;"><%= item.name %></span><br />
              <span style="color: #000000;"> ¥<%= (item.price * 1.10).round.to_s(:delimited) %></span>
             </div>
            </div>
           <% end %>
          <% end %>
    </div>
  </div>
  <div class="col-md-12 offset-5 mt-3">
    <%= paginate @items %>
  </div>
</div>
