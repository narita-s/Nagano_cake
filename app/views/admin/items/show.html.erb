<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="col-5 my-4">商品詳細</h3>
  </div>
  <div class="row mt-4">
    <div class="col-lg text-center mb-5">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "350x240" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-md-7">
      <div class="row">
        <h6 class="col-3">商品名</h6>
        <h5 class="col-7"><%= @item.name %></h5>
      </div>
      <div class="row mt-3">
        <h6 class="col-3">商品説明</h6>
        <h5 class="col-7"><%= @item.introduction %></h5>
      </div>
      <div class="row mt-3">
        <h6 class="col-3">ジャンル</h6>
        <h5 class="col-7"><%= @item.genre.name %></h5>
      </div>
      <div class="row mt-3">
        <h6 class="col-3">
          税込価格<br>
          (税抜き価格)
        </h6>
        <h5 class="col-7"><%= @item.tax_in_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</h5>
      </div>
      <div class="row mt-3">
        <h6 class="col-3">販売ステータス</h6>
        <h5 class="col-7 font-weight-bold">
          <% if @item.is_active == true %>
            <p class="text-success">販売中</p>
          <% else %>
            <p class="text-secondary">販売停止中</p>
          <% end %>
        </h5>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success"%>
    </div>
  </div>
</div>

