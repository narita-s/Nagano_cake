<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="col-5 my-4">商品新規登録</h3>
  </div>
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <div class="row">
      <div class="col-md-7 mx-auto">
        <table class="table table-borderless">
          <tr>
            <div class="form-group">
              <th><%= f.label :商品画像 %></th>
              <th><%= f.file_field :image, accept: "image/*" %></th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品名 %></th>
              <td><%= f.text_field :name, size: "50x1", placeholder:"商品名" %></td>
            </div>
          </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :商品説明 %></th>
                <td><%= f.text_area :introduction, size: "50x5", placeholder:"ここに説明文を記述します" %></td>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :ジャンル %></th>
                <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %></td>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :税抜価格 %></th>
                <td><%= f.text_field :price, size: "50x1", placeholder:"1000" %>円</td>
              </div>
              </tr>
            <tr>
            <div class="form-group">
              <th><%= f.label :販売ステータス %></th>
              <td>
                <%= f.radio_button :is_active, true, checked: true %>
                <%= f.label :is_active, "販売中" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "販売停止中" %>
              </td>
            </div>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 mx-auto">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>