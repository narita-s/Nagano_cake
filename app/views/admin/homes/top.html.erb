<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="col-5 my-4">注文履歴一覧</h3>
  </div>
  <div class="col-md-10 mx-auto mt-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="text-left"><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
        　<div class="col-md-12 offset-5">
        <%= paginate @orders %>
      </div>
  </div>
</div>