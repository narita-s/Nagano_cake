<div class="container">
  <div class="row text-center">
    <div class="col-md-4 mt-5">
      <h3 class="text-center">管理者ログイン</h3>
    </div>
  </div>
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row form-group pt-2">
        <div class="col-2 d-flex align-items-center">メールアドレス</div>
        <div class="col-md-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></div>
      </div>
      <div class="row form-group pt-2">
        <div class="col-2 d-flex align-items-center">パスワード</div>
        <div class="col-md-6"><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></div>
      </div>
      <div class="row form-group pt-2">
        <div class="col-2 d-flex align-items-center"></div>
        <div class="col-md-3"><%= f.submit "ログイン", class:"btn btn-info col-md-8" %></div>
      </div>
    <% end %>
  </div>
</div>

