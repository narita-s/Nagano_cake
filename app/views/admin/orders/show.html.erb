<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h3 class="col-md-6">注文履歴詳細</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-2">
      <h5 class= "font-weight-bold">購入者</h5>
    </div>
    <div class="col-md-5">
      <%= @order.customer.last_name + @order.customer.first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5 class= "font-weight-bold">注文日</h5>
    </div>
    <div class="col-md-5">
      <%= @order.created_at.strftime("%Y/%m/%d") %>
    </div>
  </div>
  <div class="row">
      <div class="col-md-2">
      <h5 class= "font-weight-bold">配送先</h5>
    </div>
    <div class="col-md-5">
      〒<%= @order.postal_code %>
      <%= @order.address.truncate(30) %></br>
      <%= @order.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5 class= "font-weight-bold">支払方法</h5>
    </div>
    <div class="col-md-5">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h5 class= "font-weight-bold">注文ステータス</h5>
    </div>
    <div class="col-md-5">
      <%= @order.status_i18n %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-8">
      <table class="table table-bordered border-dark">
        <tr class="table-secondary">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 d-flex align-items-end">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td class="text-right"><%= (@order.total_price - @order.shipping_cost).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td class="text-right"><%= @order.shipping_cost.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td class="text-right"><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>