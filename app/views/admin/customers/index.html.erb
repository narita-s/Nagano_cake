<body>
  <main>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-5 mt-5">
          <h3 class="text-center">会員一覧</h3>
        </div>
      </div>
        <div class="col-md-8 mx-auto mt-4">
          <table class="table">
             <thead class="thead-light">
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <% @customers.each do |customer| %>
              <tbody>
                <tr>
                  <td class="text-left"><%= customer.id %></td>
                  <td><%= link_to customer.full_name, admin_customer_path(customer), class: "link_text link_border" %></td>
                  <td class="text-left"><%= customer.email%></td>
                  <td>
                    <% if customer.is_deleted == false %>
                      <p class="text-success ">有効</p>
                    <% else %>
                      <p class="text-secondary ">退会</p>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
      </div>
    </div>
  </main>
</body>