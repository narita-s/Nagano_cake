<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="col-5 my-4"><%= @customer.full_name %>さんの会員詳細</h3>
  </div>
  <div class="row align-items-center">
    <div class="col-md-1"></div>
    <div class="col-md-8">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == false %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
           <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success mr-5" %>
           <%= link_to "注文履歴一覧を見る", edit_admin_customer_path(@customer.id), class:"btn btn-info" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

